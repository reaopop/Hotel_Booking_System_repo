@model Hotel_Booking_System.Models.BookingLog_View
@{
    ViewBag.Title = "User_Book";
}




<style>
    .price::before {
        content: '€'
    }

    .price::after {
        content: '.00';
        font-size: 19px;
    }
</style>
<div class="row" id="searchpage" style="height:500px;">
    <div class="col-md-4">
        @using (Html.BeginForm("User_Book", "User_Book", FormMethod.Post))
        {
            <h2 style="font-family:Arial;font-style:italic;color:white;background-color:lightseagreen;border-radius:20px; width:140px; padding:10px; text-align:center;">Booking</h2>

            <div class="panel panel-default">
                <div class="panel-heading">plan your stay</div>
                <div class="panel-body">

                    <div class="form-group">
                        <label for="check_in"> ChecK In Date </label>
                        @Html.EditorFor(model => model.check_in, new { htmlAttributes = new { @class = "form-control", @type = "date", @for = "check_in", @placeholder = "yyyy/mm/dd" } })

                        <label for="check_out"> ChecK Out Date </label>
                        @Html.EditorFor(model => model.check_out, new { htmlAttributes = new { @class = "form-control", @type = "date", @for = "check_out", @placeholder = "yyyy/mm/dd" } })
                    </div>


                </div>

            </div>






        <div class="panel panel-default">
            <div class="panel-heading">Hotels,Rooms</div>
            <div class="panel-body" style="position:relative;">
                <label for="hotel">Hotel Category</label>
                @Html.DropDownListFor(model => model.category_id, new SelectList(Model.categories, "id", "location"), new { @for = "hotel", @class = "form-control" })


                <label for="rooms">Rooms</label>
                @Html.DropDownListFor(model => model.room_id, new SelectList(Model.Rooms, "id", "room_no"), new { @style = "width:220px; height:27px;", @for = "rooms", @class = "form-control" })

                <label for="room_type">Room Type</label>
                @Html.DropDownListFor(model => model.room_type, new SelectList(Model.room_types, "id", "name_type"), new { @style = "width:220px; height:27px;", @for = "room_type", @class = "form-control" })

            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Amount</div>
            <div class="panel-body">
                <label for="Amount">Amount</label>
                @Html.EditorFor(model => model.amount, new { htmlAttributes = new { @class = "form-control", @type = "text", @for = "Amount", @id = "Text1", @placeholder = "Enter Price", @style = "width:220px; height:27px;" } })

            </div>
        </div>





        <div class="panel panel-default">

            <div class="panel-body">
                @Html.EditorFor(model => model.isActive, new { htmlAttributes = new { @class = "pull-left", @type = "checkbox", @for = "Active" } })
                <label class="pull-left" style="padding:0 5px 0 5px;" for="Active"> Is Active?</label>

                <button type="submit" value="submit" style="margin-top: 20px; background-color: lightseagreen; border-radius: 20px; width: 140px; padding: 10px;" class="btn btn-success pull-left align" data-bind="click: $root.reserve">
                    Book now
                </button>

            </div>
        </div>

        }

    </div>

    <div class="col-md-8">


        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>



        <div class="container">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/images/photo-1615460549969-36fa19521a4f.jfif" alt="Los Angeles" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="~/images/b32d5dc553ee2097368bae13f83e93cf.jpg" alt="hotel" style="width: 100%; height: 650px;">
                    </div>



                    <div class="item">
                        <img src="~/images/Welcomhotel-Tavleen-Chail_1200.jpg" alt="New room" style="width: 100%; height: 650px;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>





    </div>

</div>



