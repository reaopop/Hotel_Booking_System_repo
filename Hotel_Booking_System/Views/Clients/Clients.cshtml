@model Hotel_Booking_System.Models.Client_View
@{
    ViewBag.Title = "Clients";
}


<style>
    .price::before {
        content: '€'
    }

    .price::after {
        content: '.00';
        font-size: 19px;
    }
</style>

<div class="row" id="searchpage" style="height:500px;">
    <div class="col-md-4">
        <h2 style="font-family:Arial;font-style:italic;color:white;background-color:lightseagreen;border-radius:20px; width:140px; padding:10px; text-align:center;">Clients</h2>

        <div class="panel panel-default">
            <div class="panel-heading">Adding Client</div>
            <div class="panel-body">
                @using (Html.BeginForm("Clients", "Clients", FormMethod.Post))
                {
                    <div class="form-group">
                        <label for="client_name"> Client Name </label>
                        @Html.EditorFor(model => model.client_name_en, new { htmlAttributes = new { @for = "client_name", @class = "form-control", @type = "text", @placeholder = "Enter Client Name" } })

                        <label for="telephone">TelePhone</label>
                        @Html.EditorFor(model => model.telephone, new { htmlAttributes = new { @for = "telephone", @class = "form-control", @type = "tel", @placeholder = "Enter Day price" } })

                        <label for="cell_namber">Cell Phone</label>
                        @Html.EditorFor(model => model.cell_namber, new { htmlAttributes = new { @for = "cell_namber", @class = "form-control", @type = "tel", @placeholder = "Enter Day price" } })

                        <label for="client_identity_no">client identity no</label>
                        @Html.EditorFor(model => model.client_identity_no, new { htmlAttributes = new { @for = "client_identity_no", @class = "form-control", @type = "text", @placeholder = "Enter Day price" } })

                        <label for="Email"> Email </label>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @for = "Email", @class = "form-control", @type = "email", @placeholder = "Enter Room No" } })

                        <label for="Password"> Password </label>
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @for = "Password", @class = "form-control", @type = "password", @placeholder = "Enter Room No" } })


                        <button type="submit" value="submit" style="margin-top: 20px; background-color: lightseagreen; border-radius: 20px; width: 140px; padding: 10px;" class="btn btn-success pull-left align" data-bind="click: $root.reserve">
                            Add
                        </button>


                    </div>

                }
                @if (Model.Success == 1)
                {


                    <div class="alert alert-success" role="alert">
                        Save Is Success
                    </div>
                }
            </div>

        </div>

    </div>

    <div class="col-md-8">

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Client Name</th>
                    <th>Tele Phone</th>
                    <th>cell Phone</th>
                    <th>Email</th>
                    <th>identity no</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.clients)
                {
                    <tr>
                        <td>@item.client_name_en</td>
                        <td>@item.telephone</td>
                        <td>@item.cell_namber</td>
                        <td>@item.Email</td>
                        <td>@item.client_identity_no</td>

                    </tr>
                }

            </tbody>
        </table>



    </div>













