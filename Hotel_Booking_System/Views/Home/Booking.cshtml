
@{
    ViewBag.Title = "Booking";
}




<style>
    .price::before {
        content: '€'
    }

    .price::after {
        content: '.00';
        font-size: 19px;
    }
</style>
<div class="row" id="searchpage" style="height:500px;">
    <div class="col-md-4">
        <h2 style="font-family:Arial;font-style:italic;color:white;background-color:lightseagreen;border-radius:20px; width:140px; padding:10px; text-align:center;">Booking</h2>

        <div class="panel panel-default">
            <div class="panel-heading">plan your stay</div>
            <div class="panel-body">
                <div class="form-group">
                    <label for="email">Client Name</label>
                    <select data-bind="value: filters.nights" class="form-control">
                        <option></option>
                    </select>
                    <button style="margin-top:20px;">+</button>

                </div>
                <div class="form-group">
                    <label for="email"> ChecK In Date </label>
                    <input type="date" class="form-control" data-bind="value: filters.arrival" placeholder="yyyy/mm/dd" />


                    <label for="email"> ChecK Out Date </label>
                    <input type="date" class="form-control" data-bind="value: filters.arrival" placeholder="yyyy/mm/dd" />
                </div>


            </div>

        </div>






        <div class="panel panel-default">
            <div class="panel-heading">Hotels,Rooms</div>
            <div class="panel-body" style="position:relative;">
                <label for="email">Hotel Category</label>
                <select style="width:220px; height:27px;" class="form-control">
                    <option></option>
                </select>

                <label for="email">Rooms</label>
                <select style="width:220px; height:27px;" class="form-control">
                    <option></option>
                </select>
                <br />
                <label>Single</label>
                <input id="Radio1" type="radio" name="r" value="Single" />
                <label>Double</label>
                <input id="Radio2" type="radio" name="r" value="Double" />
                <label>Suit</label>
                <input id="Radio3" type="radio" name="r" value="Suit" />
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading">Amount</div>
            <div class="panel-body">
                <label>Amount</label>
                <input id="Text1" type="text" placeholder="Enter Price" style="width:220px; height:27px;" class="form-control" />
            </div>
        </div>



        <div class="panel panel-default">

            <div class="panel-body">
                <input class="pull-left" type="checkbox" />
                <label class="pull-left" style="padding:0 5px 0 5px;"> Is Active?</label>


                <button type="button" style="margin-top: 20px; background-color: lightseagreen; border-radius: 20px; width: 140px; padding: 10px;" class="btn btn-success pull-left align" data-bind="click: $root.reserve">
                    Book now
                </button>

            </div>

        </div>



    </div>

    <div class="col-md-8">


        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>



        <div class="container">

            <div id="myCarousel" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                    <li data-target="#myCarousel" data-slide-to="1"></li>
                    <li data-target="#myCarousel" data-slide-to="2"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <img src="~/images/photo-1615460549969-36fa19521a4f.jfif" alt="Los Angeles" style="width:100%;">
                    </div>

                    <div class="item">
                        <img src="~/images/b32d5dc553ee2097368bae13f83e93cf.jpg" alt="hotel" style="width: 100%; height: 650px;">
                    </div>



                    <div class="item">
                        <img src="~/images/Welcomhotel-Tavleen-Chail_1200.jpg" alt="New room" style="width: 100%; height: 650px;">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>





    </div>

</div>



