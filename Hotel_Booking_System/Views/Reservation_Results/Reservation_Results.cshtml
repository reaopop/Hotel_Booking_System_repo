@model Hotel_Booking_System.Models.Reservation_Result_view
@{
    ViewBag.Title = "Reservation_Results";
}




<style>
    .price::before {
        content: '€'
    }

    .price::after {
        content: '.00';
        font-size: 19px;
    }
</style>
<div class="row" id="searchpage" style="height:500px;">
    <div class="col-md-4">
        <h2 style="font-family:Arial;font-style:italic;color:white;background-color:lightseagreen;border-radius:20px; width:300px; padding:10px; text-align:center;">Reservation_Results</h2>

        <div class="panel panel-default">
            <div class="panel-heading">Search</div>
            <div class="panel-body">
                <div class="form-group">
                    @using (Html.BeginForm("Reservation_Results", "Reservation_Results", FormMethod.Post))
                    {
                        <label for="client">Client Name</label>
                        @Html.DropDownListFor(model => model.client_id, new SelectList (Model.clients,"id", "client_name_en"), new {@for= "client", @class = "form-control" })
                <button type="submit" value="submit" style="margin-top: 20px; background-color: lightseagreen; border-radius: 20px; width: 140px; padding: 10px;" class="btn btn-success pull-left align" data-bind="click: $root.reserve">
                    Search
                </button>
                    }
                </div>



            </div>

        </div>



    </div>

    <div class="col-md-8">

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Client Name</th>
                    <th>Check In </th>
                    <th>Check Out</th>
                    <th>Hotel Category</th>
                    <th>Floor</th>
                    <th>Room No</th>
                    <th>Room Type</th>
                    <th>Total Price </th>


                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.results)
                {
                <tr>
                    <td>@item.client_name</td>
                    <td>@item.check_in</td>
                    <td>@item.check_out</td>
                    <td>@item.hotel_category</td>
                    <td>@item.floor</td>
                    <td>@item.room_no</td>
                    <td>@item.room_type</td>
                    <td>@item.total_price</td>
                </tr>
                }
            </tbody>
        </table>



    </div>














