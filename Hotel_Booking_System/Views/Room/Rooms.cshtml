@model Hotel_Booking_System.Models.Room_View
@{
    ViewBag.Title = "Rooms";
}




<style>
    .price::before {
        content: '€'
    }

    .price::after {
        content: '.00';
        font-size: 19px;
    }
</style>
<div class="row" id="searchpage" style="height:500px;">
    <div class="col-md-4">
        <h2 style="font-family:Arial;font-style:italic;color:white;background-color:lightseagreen;border-radius:20px; width:140px; padding:10px; text-align:center;">Rooms</h2>

        <div class="panel panel-default">
            <div class="panel-heading">Adding Rooms</div>
            <div class="panel-body">
                @using (Html.BeginForm("Rooms", "Room", FormMethod.Post))
                {
                <div class="form-group">
                    <label for="room_no"> Room No </label>
                    @Html.EditorFor(model => model.room_no, new { htmlAttributes = new { @for = "room_no", @class = "form-control", @type = "text", @placeholder = "Enter Room No" } })


                    <label for="floor"> Floor </label>
                    @Html.DropDownListFor(model => model.floor_id, new SelectList(Model.floors, "id", "floor_no"), new { @for = "floor", @class = "form-control" })

                    <label for="room_type"> Room Type </label>
                    @Html.DropDownListFor(model => model.room_type_id, new SelectList(Model.room_types, "id", "name_type"), new { @for = "room_type", @class = "form-control" })

                    <label for="day_price">Day Price</label>
                    @Html.EditorFor(model => model.day_price, new { htmlAttributes = new { @for = "day_price", @class = "form-control", @type = "number", @placeholder = "Enter Day price" } })

                    <div class="panel-heading"> Hotel Description</div>
                    <div class="panel-body" style="position:relative;">
                        <label for="desc">Description</label>
                        @Html.TextAreaFor(model => model.description, new { htmlAttributes = new {  @class = "form-control", @placeholder = "Enter Day price" , @for = "desc" } })

                    </div>
                    <button type="submit" value="submit" style="margin-top: 20px; background-color: lightseagreen; border-radius: 20px; width: 140px; padding: 10px;" class="btn btn-success pull-left align" data-bind="click: $root.reserve">
                        Add
                    </button>


                </div>

                }
                </div>

        </div>















    </div>

    <div class="col-md-8">

        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th>Hotel Category</th>
                    <th>Room No</th>
                    <th>Floor</th>
                    <th>Room Type</th>
                    <th>Discription</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    @foreach (var item in Model.rooms)
                    {
                    <td>@item.Hotel_category</td>
                    <td>@item.Room_No</td>
                    <td>@item.Floor</td>
                    <td>@item.Room_Type</td>
                    <td>@item.Discption</td>

                    }
                </tr>

            </tbody>
        </table>



    </div>












